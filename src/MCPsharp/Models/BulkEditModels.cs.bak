/// <summary>
/// Information about a rollback session
/// </summary>
public class RollbackInfo
{
    /// <summary>
    /// Unique identifier for the rollback session
    /// </summary>
    public required string RollbackId { get; init; } = Guid.NewGuid().ToString();

    /// <summary>
    /// Original operation that can be rolled back
    /// </summary>
    public required string OriginalOperationId { get; init; }

    /// <summary>
    /// Type of operation that was performed
    /// </summary>
    public required string OperationType { get; init; }

    /// <summary>
    /// Files that were modified
    /// </summary>
    public required IReadOnlyList<string> ModifiedFiles { get; init; } = new List<string>();

    /// <summary>
    /// Backup locations for each file
    /// </summary>
    public required IReadOnlyDictionary<string, string> BackupLocations { get; init; } = new Dictionary<string, string>();

    /// <summary>
    /// When the original operation was performed
    /// </summary>
    public required DateTime OperationTimestamp { get; init; }

    /// <summary>
    /// When this rollback expires (if applicable)
    /// </summary>
    public required DateTime? ExpiresAt { get; init; }

    /// <summary>
    /// Size of all backups combined
    /// </summary>
    public required long TotalBackupSize { get; init; }

    /// <summary>
    /// Whether rollback is still possible
    /// </summary>
    public required bool IsRollbackPossible { get; init; }
}

/// <summary>
/// Estimate of the impact and complexity of a bulk operation
/// </summary>
public class ImpactEstimate
{
    /// <summary>
    /// Overall complexity level
    /// </summary>
    public required ComplexityLevel ComplexityLevel { get; init; }

    /// <summary>
    /// Estimated number of files to be modified
    /// </summary>
    public required int EstimatedFilesAffected { get; init; }

    /// <summary>
    /// Estimated number of total changes
    /// </summary>
    public required int EstimatedTotalChanges { get; init; }

    /// <summary>
    /// Estimated time to complete the operation
    /// </summary>
    public required TimeSpan EstimatedDuration { get; init; }

    /// <summary>
    /// Risk assessment
    /// </summary>
    public required RiskLevel RiskLevel { get; init; }

    /// <summary>
    /// Files that might be affected but are uncertain
    /// </summary>
    public required IReadOnlyList<string> UncertainFiles { get; init; } = new List<string>();

    /// <summary>
    /// Potential breaking changes
    /// </summary>
    public required IReadOnlyList<string> BreakingChanges { get; init; } = new List<string>();

    /// <summary>
    /// Dependencies that might be affected
    /// </summary>
    public required IReadOnlyList<string> AffectedDependencies { get; init; } = new List<string>();

    /// <summary>
    /// Recommendations for safe execution
    /// </summary>
    public required IReadOnlyList<string> Recommendations { get; init; } = new List<string>();

    /// <summary>
    /// Confidence level in the estimate
    /// </summary>
    public required double ConfidenceLevel { get; init; }
}

/// <summary>
/// Type of change being made to a file
/// </summary>
public enum ChangeType
{
    /// <summary>
    /// Text replacement
    /// </summary>
    Replacement,

    /// <summary>
    /// Insertion of new content
    /// </summary>
    Insertion,

    /// <summary>
    /// Deletion of content
    /// </summary>
    Deletion,

    /// <summary>
    /// Structural refactoring
    /// </summary>
    Refactoring,

    /// <summary>
    /// Formatting changes only
    /// </summary>
    Formatting,

    /// <summary>
    /// Multiple types of changes
    /// </summary>
    Mixed
}

/// <summary>
/// Complexity levels for operations
/// </summary>
public enum ComplexityLevel
{
    /// <summary>
    /// Simple, low-risk operation
    /// </summary>
    Simple,

    /// <summary>
    /// Moderate complexity
    /// </summary>
    Moderate,

    /// <summary>
    /// Complex operation requiring care
    /// </summary>
